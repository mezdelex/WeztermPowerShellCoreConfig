{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "actions": [
        // Open Settings
        {
            "command": {
                "action": "openSettings"
            },
            "keys": "ctrl+comma"
        },
        {
            "command": {
                "action": "openSettings",
                "target": "defaultsFile"
            },
            "keys": "ctrl+alt+comma"
        },
        // Manage Tabs
        {
            "command": {
                "action": "newTab"
            },
            "keys": "ctrl+t"
        },
        {
            "command": "closePane",
            "keys": "ctrl+w"
        },
        {
            "command": {
                "action": "nextTab"
            },
            "keys": "ctrl+tab"
        },
        {
            "command": {
                "action": "prevTab"
            },
            "keys": "ctrl+shift+tab"
        },
        // Scroll Panes
        {
            "command": {
                "action": "scrollUp"
            },
            "keys": "alt+shift+up"
        },
        {
            "command": {
                "action": "scrollDown"
            },
            "keys": "alt+shift+down"
        },
        {
            "command": "scrollToTop",
            "keys": "alt+shift+home"
        },
        {
            "command": "scrollToBottom",
            "keys": "alt+shift+end"
        },
        {
            "command": "scrollUpPage",
            "keys": "pgup"
        },
        {
            "command": "scrollDownPage",
            "keys": "pgdn"
        },
        // Select Panes
        {
            "command": {
                "action": "moveFocus",
                "direction": "up"
            },
            "keys": "alt+up"
        },
        {
            "command": {
                "action": "moveFocus",
                "direction": "down"
            },
            "keys": "alt+down"
        },
        {
            "command": {
                "action": "moveFocus",
                "direction": "left"
            },
            "keys": "alt+left"
        },
        {
            "command": {
                "action": "moveFocus",
                "direction": "right"
            },
            "keys": "alt+right"
        },
        // Split Panes
        {
            "command": {
                "action": "splitPane",
                "split": "horizontal"
            },
            "keys": "ctrl+alt+down"
        },
        {
            "command": {
                "action": "splitPane",
                "split": "vertical"
            },
            "keys": "ctrl+alt+right"
        },
        // Resize Panes
        {
            "command": {
                "action": "resizePane",
                "direction": "up"
            },
            "keys": "ctrl+up"
        },
        {
            "command": {
                "action": "resizePane",
                "direction": "down"
            },
            "keys": "ctrl+down"
        },
        {
            "command": {
                "action": "resizePane",
                "direction": "left"
            },
            "keys": "ctrl+left"
        },
        {
            "command": {
                "action": "resizePane",
                "direction": "right"
            },
            "keys": "ctrl+right"
        },
        // Copy & Paste
        {
            "command": {
                "action": "copy",
                "singleLine": false
            },
            "keys": "ctrl+c"
        },
        {
            "command": "paste",
            "keys": "ctrl+v"
        },
        // Reset Size
        {
            "command": "resetFontSize",
            "keys": "ctrl+0"
        }
    ],
    "alwaysShowTabs": false,
    "useAcrylicInTabRow": true,
    "copyFormatting": "none",
    "copyOnSelect": false,
    "defaultProfile": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
    "profiles": {
        "defaults": {
            "acrylicOpacity": 1,
            "colorScheme": "Gruvbox Material Dark",
            "font": {
                "face": "CaskaydiaCove NF"
            },
            "startingDirectory": ".",
            "useAcrylic": true,
            "tabColor": "#665C54"
        },
        "list": [
            {
                "guid": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
                "hidden": false,
                "name": "PowerShell",
                "source": "Windows.Terminal.PowershellCore"
            },
            {
                "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
                "hidden": false,
                "name": "Azure Cloud Shell",
                "source": "Windows.Terminal.Azure"
            }
        ]
    },
    "schemes": [
        {
            "background": "#32302F",
            "black": "#665C54",
            "blue": "#7DAEA3",
            "brightBlack": "#928374",
            "brightBlue": "#7DAEA3",
            "brightCyan": "#89B482",
            "brightGreen": "#A9B665",
            "brightPurple": "#D3869B",
            "brightRed": "#EA6962",
            "brightWhite": "#D4BE98",
            "brightYellow": "#D8A657",
            "cursorColor": "#FFFFFF",
            "cyan": "#89B482",
            "foreground": "#D4BE98",
            "green": "#A9B665",
            "name": "Gruvbox Material Dark",
            "purple": "#D3869B",
            "red": "#EA6962",
            "selectionBackground": "#FFFFFF",
            "white": "#D4BE98",
            "yellow": "#D8A657"
        }
    ]
}
